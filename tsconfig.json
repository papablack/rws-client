{
    "compilerOptions": {
      "baseUrl": "./",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "ES2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "outDir": "dist/src",
      "strictNullChecks": false,
      "allowSyntheticDefaultImports": true,  
      "sourceMap": true,    
      "declaration": true,     
    },
    "include": [
      "src",      
    ],
    "exclude": []
  }