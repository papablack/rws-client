{
    "compilerOptions": {
      "baseUrl": "./",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "ES2018",
      "module": "es2022",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "outDir": "dist/src",
      "strictNullChecks": false,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,  
      "sourceMap": true,    
      "declaration": true,     
      "lib": ["DOM", "ESNext"],
    },
    "include": [
      "src",             
      "types/docs-typings.d.ts"      
    ]
  }